{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set activeNav = "thoughts" %}

{# Intro content #}
{% set introHeading = title %}
{% set introSummary %}
<p class="">
  {% if date %}
    <time datetime="{{ date | w3DateFilter }}" class="dt-published">{{ date | dateFilter }}</time>
  {% endif %}
  <span>â€” {{ helpers.getReadingTime(content) }} minute read</span>
</p>
{% endset %}

{% block content %}
  <main id="main-content" class="project">
    <section class="intro">
      <div class="wrapper grid-wrapper">
        <div class="grid-item">
          <h1 class="intro__heading">{{ introHeading }}</h1>   
        </div>
        <p class="intro__blurb">
          {# {% if postListItems.length %} #}
          {% for item in postListItems %}
          {% if item.date.getTime() <= global.now %}
            <time datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
           {% endif %}
           {% endfor %}
           {# {% endif %} #}
        </p>
      </div>
    </section>
    <article>
      <div class="wrapper grid-wrapper grid-wrapper--reverse project__body">
        <div class="grid-item project__meta">
          <div class="project__meta-inner">
            <div>
              <h3>{{employer}}</h3>
              <p>{{year}}</p>
              <a href="/"><span>View more work</span></a>
            </div>
            <div>
              {% if roles %}
                {# <h2>Role</h2> #}
                <ul>
                  {% for item in roles %}
                    <li>{{item.itemText}}</li>
                  {% endfor %}
                </ul>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="project__content-wrapper grid-item">
          {# {% if leadImage %}
            <div class="intro__image">
              <figure>
                <img src="{{leadImage}}" alt="{{leadImage}}">
                <figcaption>{{leadImageCaption}}</figcaption>
              </figure>
            </div>
          {% endif %} #}
          <div class="grid-item project__content">

            {{ content | safe }}

            <div class="post__footer">
              {% if tags %}
              <h3 class="">Tags</h3>
              <ul class="">
                {% for item in tags %}
                  <li class="nav__item">
                    <a href="/tags/{{ item }}">{{ item }}</a>
                  </li>
                {% endfor %}
              </ul>
              {% endif %}
            </div>

          </div>

          

        </div>
      </div>
      <div class="wrapper grid-wrapper grid-wrapper--reverse project__body">
        
      </div>
    </article>
  </main>
{% endblock %}

