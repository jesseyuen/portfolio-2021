{% extends 'layouts/base.njk' %}

{% from "macros/feature-box/macro.njk"   import appFeatureBox %}

{# Intro content #}
{% set introHeading = title %}

{% block content %}
  <main id="main-content">
    <section class="intro">
      <div class="wrapper grid-wrapper grid-wrapper--reverse">
        <div class="grid-item">
          <h2 class="intro__heading">{{ introHeading }}</h2>
        </div>
        <div class="grid-item">
          <h2>Role</h2>
          {{role}}
          <h2>{{employer}}</h2>
          {{year}}
        </div>
      </div>
    </section>
    <article>
      <div class="wrapper grid-wrapper">
        <div class="grid-item">
          {{ testField | safe }}
          {# empty #}
        </div>
        <div class="grid-item">
          <section class="project-summary">
            {{ intro | safe }}
          </section>
          {{ content | safe }}
          {% if outro %}
            <section class="project-summary">
              {{ outro | safe }}
            </section>
          {% endif %}
        </div>
      </div>
    </article>
  </main>
{% endblock %}

{{ content | safe }}
