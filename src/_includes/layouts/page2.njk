{% extends 'layouts/base.njk' %}

{# Intro content #}
{% set introHeading = title %}
{% set blurb = blurb %}

{% block content %}
  <main id="main-content" class="page2">
    <section class="intro">
      <div class="wrapper grid-wrapper grid-wrapper--reverse">
        <div class="grid-item">
          <h2 class="intro__heading">{{ introHeading }}</h2>
          <p class="intro__blurb">{{ blurb | safe }}</p>
        </div>
      </div>
    </section>
    <section>
      <div class="wrapper grid-wrapper">
        <div class="grid-item">
          {# page template #}
        </div>
        <div class="grid-item">
          {{ content | safe }}
        </div>
      </div>
    </section>
  </main>
{% endblock %}
